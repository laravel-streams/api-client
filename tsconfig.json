{
    "compileOnSave": false,
    "compilerOptions": {
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "module": "CommonJS",
        "jsx": "preserve",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "importHelpers": false,
        "resolveJsonModule": true,
        "noImplicitUseStrict": false,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "../../../node_modules/@types"
        ],
        "lib": [
            "ES2020",
            "scripthost",
            "DOM"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src2",
        "node_modules",
        "test",
        "dist"
    ]
}
