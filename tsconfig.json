{
    "compileOnSave": false,
    "compilerOptions": {
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "module": "CommonJS",
        "jsx": "preserve",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "experimentalDecorators": true,


        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "resolveJsonModule": true,
        "noImplicitUseStrict": false,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "../../../node_modules/@types"
        ],
        "lib": [
            "ES2020",
            "scripthost",
            "DOM"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "test",
        "rollup.config.ts",
        "dist"
    ]
}
