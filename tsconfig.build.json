{
    "compileOnSave": false,
    "compilerOptions": {
        "pretty": true,
        "sourceMap": false,
        "target": "es6",
        "module": "esnext",
        "jsx": "preserve",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "resolveJsonModule": true,
        "noImplicitUseStrict": false,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "../../../node_modules/@types"
        ],
        "lib": [
            "esnext",
            "scripthost",
            "DOM"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "docs",
        "examples",
        "node_modules",
        "test"
    ]
}
