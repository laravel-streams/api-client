{
    "name": "@laravel-streams/streams-api",
    "version": "1.0.0",
    "publishConfig": {
        "access": "public"
    },
    "types": "dist/index.d.ts",
    "main": "dist/streams-api.cjs.js",
    "module": "dist/streams-api.esm-bundler.js",
    "scripts": {
        "clean": "npm-run-all clean:dist clean:doc",
        "clean:dist": "rm -rf ./dist",
        "clean:doc": "rm -rf ./docs",
        "doc": "typedoc --options ./typedoc.js",
        "build": "npm-run-all clean build dts",
        "bundle": "rollup --config rollup.config.ts --configPlugin typescript",
        "watch": "rollup --config rollup.config.ts --configPlugin typescript --watch",
        "dts": "tsc -p ./tsconfig.build.json --emitDeclarationOnly  --declaration --declarationDir dist ",
        "test": "TS_NODE_PROJECT=./tsconfig.test.json mocha"
    },
    "dependencies": {
        "camelcase": "^6.2.0",
        "deepmerge": "^4.2.2",
        "tapable": "^2.2.1"
    },
    "devDependencies": {
        "reflect-metadata": "^0.1.13"
    },
    "streams": {
        "output": {
            "type": "module"
        },
        "src": "src",
        "bundler": "rollup",
        "scripts": {
            "dev": "bundle",
            "prod": "build",
            "watch": "watch",
            "test": "test"
        }
    }
}
