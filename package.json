{
    "name": "@laravel-streams/streams-api",
    "version": "1.0.0",
    "publishConfig": {
        "access": "public"
    },
    "types": "dist/index.d.ts",
    "main": "dist/streams-api.cjs.js",
    "module": "dist/streams-api.esm.js",
    "scripts": {
        "clean": "npm-run-all clean:dist clean:js clean:doc",
        "clean:dist": "rimraf ./dist",
        "clean:js": "rimraf ./{src,test}/**/*.js",
        "clean:doc": "rimraf ./docs",
        "build": "npm-run-all clean build:dist",
        "build:doc": "typedoc --options ./typedoc.js",
        "build:dist": "rollup --config rollup.config.ts --configPlugin typescript",
        "test": "TS_NODE_PROJECT=./tsconfig.test.json mocha"
    },
    "nyc": {
        "check-coverage": true,
        "lines": 80,
        "statements": 80,
        "functions": 80,
        "branches": 80,
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "test/**/*.ts"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "all": true
    },
    "dependencies": {
        "deepmerge": "^4.2.2",
        "tapable": "^2.2.1"
    },
    "devDependencies": {
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/preset-env": "^7.15.6",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-typescript": "^8.3.0",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@testdeck/mocha": "^0.1.2",
        "@types/btoa": "^1.2.3",
        "@types/chai": "^4.2.22",
        "@types/debug": "^4.1.7",
        "@types/faker": "^5.5.8",
        "@types/grunt": "^0.4.27",
        "@types/jsdom": "^16.2.13",
        "@types/lz-string": "^1.3.34",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.1",
        "@types/qs": "^6.9.7",
        "@types/should": "^13.0.0",
        "@types/should-sinon": "^0.0.8",
        "@types/sinon": "^10.0.4",
        "@types/sinon-chai": "^3.2.5",
        "@types/superagent": "^4.1.13",
        "btoa": "^1.2.1",
        "buble": "^0.20.0",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "dotenv": "^10.0.0",
        "faker": "^5.5.3",
        "grunt": "^1.4.1",
        "jsdom": "^18.0.0",
        "laravel-mix": "^6.0",
        "lodash": "^4.17",
        "mocha": "^9.1.2",
        "node-fetch": "^3.0.0",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "postcss": "^8.1",
        "pretender": "^3.4.7",
        "rimraf": "^3.0.2",
        "rollup": "^2.58.0",
        "rollup-plugin-dts": "^4.0.0",
        "rollup-plugin-polyfill-node": "^0.7.0",
        "rollup-plugin-progress": "^1.1.2",
        "rollup-plugin-size-snapshot": "^0.12.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "rollup-plugin-visualizer": "^5.5.2",
        "should": "^13.2.3",
        "should-sinon": "^0.0.6",
        "sinon": "^11.1.2",
        "sinon-chai": "^3.7.0",
        "source-map-support": "^0.5.20",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.3",
        "whatwg-fetch": "^3.6.2"
    }
}
