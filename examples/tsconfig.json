{
    "extends": "../tsconfig.json",
    "compileOnSave": false,
    "compilerOptions": {
        "pretty": true,
        "sourceMap": true,
        "target": "es2017",
        "module": "commonjs",
        "jsx": "preserve",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "experimentalDecorators": true,

        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "resolveJsonModule": true,
        "noImplicitUseStrict": false,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@laravel-streams/streams-api": ["../src/index.ts"]
        }
    },
    "include": [
        ".",
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist"
    ]
}
